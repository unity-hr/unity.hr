doctype html
html.no-js
  head
    meta(charset='utf-8')
    meta(name='description' content='We design interfaces, create concepts, build prototypes, experiment.')
    meta(name='viewport' content='width=device-width, initial-scale=1, minimal-ui')

    link(rel='apple-touch-icon-precomposed' href='images/favicons/favicon-152.png')
    link(rel='apple-touch-icon-precomposed' href='images/favicons/favicon-57.png')

    each size in [152, 144, 120, 114, 72]
      link(rel='apple-touch-icon-precomposed' sizes='#{size}x#{size}' href='images/favicons/favicon-#{size}.png')

    meta(name='msapplication-TileColor' content='#0078D4')
    meta(name='msapplication-TileImage' content='images/favicons/favicon-144.png')

    script(src='http://fast.fonts.net/jsapi/03055259-76f3-4063-a379-24c0734e410f.js')

    block title

    // build:css styles/vendor.css
    // bower:css
    link(rel='stylesheet', href='../bower_components/normalize-css/normalize.css')
    // endbower
    // endbuild

    // build:css styles/main.css
    link(rel='stylesheet', href='styles/main.css')
    // endbuild

    // build:js scripts/vendor/modernizr.js
    script(src='../bower_components/modernizr/modernizr.js')
    // endbuild

  body.off-canvas
    ul.list-unstyled.off-canvas-menu
      li: a(href='./') Home
      li: a(href='about.html') About us
      li: a(href='#') Work
      li: a(href='#') Contact

    .off-canvas-content
      header.header.fd(role='banner')
        h1.brand
          a(href='./') Unity

        nav.navigation(role='navigation')
          ul.list-unstyled.fl.off-canvas-hide
            li: a(href='./') Home
            li: a(href='about.html') About us
            li: a(href='#') Work
            li: a(href='#') Contact

          a.off-canvas-toggle(href='#')
            span.bar
            span.bar
            span.bar

      main.main(role='main')
        block content

    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-34931379-1', 'unity.hr');
      ga('send', 'pageview');

    // build:js scripts/vendor.js
    // bower:js
    script(src='../bower_components/jquery/dist/jquery.js')
    script(src='../bower_components/modernizr/modernizr.js')
    script(src='../bower_components/fastclick/lib/fastclick.js')
    script(src='../bower_components/off-canvas/dist/off-canvas.js')
    // endbower
    // endbuild

    // build:js scripts/main.js
    script(src='scripts/about.js')
    script(src='scripts/intro.js')
    script(src='scripts/navigation.js')
    // endbuild
